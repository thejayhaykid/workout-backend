// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:db.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  name     String?
  password String
  email    String
}

model Workout {
  id        Int         @id @default(autoincrement())
  title     String
  category  String
  focus     String
  dateAdded DateTime    @default(now())
  exercises Exercises[]
}

model Exercises {
  id        Int       @id @default(autoincrement())
  title     String
  category  String
  focus     String
  dateAdded DateTime  @default(now())
  Workouts  Workout[]
}
